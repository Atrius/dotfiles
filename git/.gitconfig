[user]
  name = Bjorn A Mellem
[alias]
  dt = difftool -d
  next = !git-next
  prev = !git-prev
[core]
  excludesFile = ~/.git_global_ignore
[diff]
  tool = meld
[rerere]
  enabled = 1
[pack]
  windowMemory = 100m
  deltaCacheSize = 100m
[http]
  cookiefile = ~/.gitcookies
[pull]
  rebase = true
[merge]
  ff = only

[include]
  path = ~/.gitconfig_ext
