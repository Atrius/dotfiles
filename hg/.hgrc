[alias]
diff-raw = diff -r .^ --unified 0 --root .
keep-dest = resolve -t 'internal:local'
keep-source = resolve -t 'internal:other'
meld = resolve --tool meld
merge2 = resolve --tool 'internal:merge'
unpatch = !hg diff -r '$1' -r '$1^1' | hg import - --no-commit

[extdiff]
cmd.vdiff = meld

[extensions]
extdiff =
purge =

[ui]
username = mellem
merge = internal:merge3

%include ~/.hgrc_ext
